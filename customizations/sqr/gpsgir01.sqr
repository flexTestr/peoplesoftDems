   let $sql-statement = 'GPSGIR01.sqr,GP-ePay-Guide'

 If $ePay_Installed = 'Y'

   ! SGP Payslip does not exclude by run type. We can ignore this procedure

   !do Get-RUN-TYPE  ! not an ePay procedure

   Let $strEmplRcd = to_char(#Empl_Rcd)
