   If $Data_Existing = 'Y'

Begin-SQL
DELETE 
   FROM PS_GP_SS_PSLP_GDE GDE2
  WHERE GDE2.EMPLID = $eV5
    AND GDE2.CAL_RUN_ID = $Gde_Cal_Run_ID
    AND GDE2.GP_PSLP_SRCPRODUCT = 'GPSGP'
    AND GDE2.GP_PSLP_ID = $Gde_Pslip_ID
