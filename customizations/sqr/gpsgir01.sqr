begin-select
P.NAME
JC.DESCR

  FROM PS_JOB J
     , PS_PERSON_NAME P
     , PS_JOBCODE_TBL JC
 WHERE P.EMPLID = J.EMPLID
   AND P.EMPLID = $Co_Tax_Contact_Id
   AND J.JOB_INDICATOR = 'P'
   AND J.JOBCODE = JC.JOBCODE
   AND J.EFFDT = (SELECT MAX(J1.EFFDT)
