     Let $ROB_ROC_Type = 'UEN-Other'
     Let $ROB_ROC_No   = &CO.GPSG_ROB_ROC_NO
  end-if
  If rtrim(&CO.GPSG_ROB_ROC_TYPE,' ') = 'N' or rtrim(&CO.GPSG_ROB_ROC_TYPE,' ') = 'O'
     Let $ROB_ROC_Type = 'Other'
     Let $ROB_ROC_No   = $Company_Tax_Ref
