  If rtrim(&CO.GPSG_ROB_ROC_TYPE,' ') = '8'
     Let $ROB_ROC_Type = 'UEN-LC'
     Let $ROB_ROC_No   = &CO.GPSG_ROB_ROC_NO
  end-if
