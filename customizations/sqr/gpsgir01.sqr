    Let $Bank_Name = ' '
begin-select
N.BANK_NM     &BANK_NM

  Let $Bank_Name = &BANK_NM
  
FROM PS_BANK_EC_TBL N
WHERE N.BANK_CD = $Bank_cd

end-Select

End-procedure


