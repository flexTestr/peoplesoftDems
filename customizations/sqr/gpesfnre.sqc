          let #Total-Dsmpl      =  #Total-Dsmpl +  &SSTC_ANT3.GPES_SSTC_AMOUNT
          if $sstc-Paymnt = $Prev-sstc-Paymnt and (&SSTC_ANT3.GPES_SSTC_PAYMNT <> 'L03'
