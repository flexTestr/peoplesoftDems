Begin-SELECT DISTINCT on-error=SQL-Error
'X' &3ABSE3.X
       let $Naturual-Days-Count = 'Y'

FROM PS_GP_PIN GPP
   , PS_GP_ABS_EVENT ABSE
WHERE GPP.PIN_CODE IN ('RIESGO EMBARAZO ESP')
