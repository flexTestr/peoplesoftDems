FROM PS_PERS_NID CTPS
WHERE CTPS.NATIONAL_ID_TYPE = 'CTPS'
AND CTPS.EMPLID = $Emplid
end-select

Let $CTPSSerie    = ''
Begin-Select  
I.CTPS_SERIES_BRA

 Let $CTPSSerie   = Rtrim(&I.CTPS_SERIES_BRA, ' ')
 
FROM PS_PERSON_BRA I
WHERE I.EMPLID  = $Emplid
End-Select

Let $CTPS = $CTPS || ' ' || $CTPSSerie

