      let #Cont1 = 0       !Nos servira para validar si necesita la coma

      DO Print-Order($GPBR_SEQ01,$GPBR_ASC_DESC01,$gv_Order,#Cont1)
      DO Print-Order($GPBR_SEQ02,$GPBR_ASC_DESC02,$gv_Order,#Cont1)
